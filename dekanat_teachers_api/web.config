<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="aspNetCore"
           path="*"
           verb="*"
           modules="AspNetCoreModule"
           resourceType="Unspecified"/>
    </handlers>
    <aspNetCore processPath="dotnet"
                arguments=".\TeachersApi21.dll"
                stdoutLogEnabled="true"
                stdoutLogFile=".\logs\stdout"
                hostingModel="OutOfProcess">
      
      <!-- Переменные окружения -->
      <environmentVariables>
        <environmentVariable name="API_KEY" value="ТвойКЛюч" />
        <environmentVariable name="DEKANAT_CONNSTR" value="Server=localhost;Database=dekanat;Integrated Security=True;TrustServerCertificate=True" />
      </environmentVariables>
      
    </aspNetCore>
  </system.webServer>
</configuration>